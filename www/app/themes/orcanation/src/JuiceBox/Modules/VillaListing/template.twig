<div class="module padding-fluid villa-listing">
	<div class="container">
		<div class="villa-listing-wrap">
			{% if module.title %}
				<div class="villa-listing-wrap-heading plantin t-64 t-italic t-center color-grey">
					{{module.title}}
				</div>
			{% endif %}

			{% for item in module.select_item %}

				<div class="villa-listing-section">
					<div class="villa-listing-section-image">
						{% include 'VillaListing/swiper.twig' with {
                            class: 'swiper-'~loop.index,
                            arr: item.meta('featured_gallery')
                        } %}
					</div>
					<div class="villa-listing-section-content">
						<div class="villa-listing-section-content-title plantin t-40 t-italic color-grey">
							{{item.title}}
						</div>


						{% if module.post_type == 'villa' %}
							<div class="villa-listing-section-content-description eaves t-20 color-grey">
								{{item.post_excerpt}}
							</div>
						{% else %}
							<div class="villa-listing-section-content-description eaves t-20 color-grey">
								{{item.post_content|wpautop}}
							</div>

						{% endif %}


						<div class="villa-listing-section-content-feature {{module.post_type == 'villa' ? '' : 'none'}}">

							{% set icon = ['area','bed','guest'] %}
							{% for feat in icon %}
								{% set meta = feat == 'area' ? 'room_size' : feat  %}
								<div class="villa-listing-section-content-feature-item">
									<div class="villa-listing-section-content-feature-item-icon">
										{% include 'img/villa-icon.twig' with {
                                        value: feat
                                    } %}
									</div>
									<div class="villa-listing-section-content-feature-item-text">
										{{item.meta(meta)}}
									</div>
								</div>
							{% endfor %}
						</div>

						<div class="villa-listing-section-content-button">
							{% include 'partials/button.twig' with{
                                'link': item.meta('booking_link') ? item.meta('booking_link') : item.meta('book_link'),
                                'style': 'mbtn mbtn-gold',
                            } %}
							{% if module.post_type == 'villa' %}

								{% include 'partials/button.twig' with{
                                'link': 
                                    {
                                        'url': item.link,
                                        'title': 'DETAILS'
                                    }
                                ,
                                'style': 'mbtn mbtn-transparent-black',
                            } %}
							{% endif %}
						</div>

					</div>
				</div>
			{% endfor %}


		</div>
	</div>
</div>
