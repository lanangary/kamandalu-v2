<footer class="footer global">
	<div class="footer-cta">
		<div class="container">
			<div class="footer-cta-wrap">
				<div class="footer-cta-section">
					<div class="footer-cta-content">
						<div class="footer-cta-content-title eaves t-40">
							Subscribe for Exclusive Offers
						</div>
					</div>
					<div class="footer-cta-content-form">
						{{ shortcode('[gravityforms id="6"]') }}
					</div>
				</div>

				<div class="footer-cta-section">
					<div class="footer-cta-text plantin t-36 color-white t-italic">
						Join our exclusive list and unlock early access to special offers, luxury packages, and seasonal experiences
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="footer-menu">
		<div class="container con-menus">
			<div class="footer-menu-wrap">
				<div class="footer-menu-section">
					<div class="footer-menu-cta">
						<div class="footer-menu-cta-title plantin t-48 color-gold t-italic lh-100">
							Your next getaway starts with us
						</div>
						<div class="footer-menu-cta-button">
							<a href="#" class="button button--primary eaves t-16 color-gold t-uppercase">
								<i>{% include "img/footer-arrow.svg" %}</i>
								<span>
									Book Your stay
								</span>
							</a>
						</div>
					</div>
				</div>
				<div class="footer-menu-section">
					<div class="footer-menu-item">
						<div class="footer-menu-item-list">
							{% include 'Footer/simple-footer.twig' with {
								menu: theme_menus.footer_menu
						} only %}
						</div>
					</div>
					<div class="footer-menu-item menu-social">
						<div class="footer-menu-item-list">
							<div class="menu-social-title plantin t-24 t-italic color-gold">
								Social
							</div>
							<div class="menu-social-item">
								{% for item in options.social_links %}
									<a href="{{ item.link }}" class="footer-gc__social_link" target="_blank">
										<span class="sr-only">{{ item.type.label }}</span>
										{% include 'img/social.twig' with{
										type: item.type.value
									} %}
										{# {{ icon(item.type.value) }} #}
									</a>
								{% endfor %}
							</div>
							<div class="menu-social-certified">
								Certified
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container con-legal">
			<div class="footer-menu-legal eaves color-black t-16">
				<div class="footer-menu-legal-wrap">
					<div class="footer-menu-legal-copyright">
						Â©
						{{"now"|date("Y")}}
						kamandalu ubud. All rights reserved.
					</div>

					<div class="footer-menu-legal-links">
						{% include 'Footer/simple-footer.twig' with {
						menu: theme_menus.legal_menu
					} only %}
					</div>
				</div>

				<div class="footer-menu-legal-wrap">
					<div class="footer-menu-legal-email">
						<a href="mailto:sales@kamandalu" target="_blank" rel="noopener noreferrer">
							sales@kamandalu
						</a>
					</div>
				</div>

			</div>
		</div>
	</div>

</footer>
